@using JohnTestWebApp.Models
@model TeamViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div>
        @Html.LabelFor(m => m.Conference)
        @Html.EditorFor(m => m.Conference)
        @Html.ValidationMessageFor(m => m.Conference)
    </div>
    <div>
        @Html.LabelFor(m => m.Name)
        @Html.EditorFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div>
        @Html.LabelFor(m => m.YearFounded)
        @Html.EditorFor(m => m.YearFounded)
        @Html.ValidationMessageFor(m => m.YearFounded)
    </div>
    <div>
        @Html.LabelFor(m => m.Arena)
        @Html.EditorFor(m => m.Arena)
        @Html.ValidationMessageFor(m => m.Arena)
    </div>
    <div>
        @Html.LabelFor(m => m.Capacity)
        @Html.EditorFor(m => m.Capacity)
        @Html.ValidationMessageFor(m => m.Capacity)
    </div>
    <div>
        @Html.LabelFor(m => m.City)
        @Html.EditorFor(m => m.City)
        @Html.ValidationMessageFor(m => m.City)
    </div>
    <div>
        <input type="file" name="imageFile" class="btn btn-secondary" />
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}